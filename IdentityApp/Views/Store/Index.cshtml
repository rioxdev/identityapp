@model List<Product>
@{
}

<h4 class="bg-primary text-white text-center p-2">MVC - Level 2 - Signed in Users</h4>

<div class="p-2">
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th class="text-right">Price</th>
            </tr>
        </thead>
        <tbody>
            @foreach(Product p in Model.OrderBy(p=> p.Id))
            {
                <tr>
                    <th>@p.Id</th>
                    <th>@p.Name</th>
                    <th>@p.Category</th>
                    <th class="text-right">@p.Price.ToString("F2")</th>
                </tr>
            }
        </tbody>
    </table>
</div>
