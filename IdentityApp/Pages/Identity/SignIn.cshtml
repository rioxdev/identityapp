@page "{returnUrl?}"
@model IdentityApp.Pages.Identity.SignInModel
@{
    ViewData["showNav"] = false;
    ViewData["banner"] = "Sign in";
    Layout = "_Layout";
}

<div class="text-danger m-2" asp-validation-summary="All"></div>

@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-danger">@TempData["message"]</div>
}

<div class="row" >
    <div class="col-3">
        <form method="post">
            <div class="form-group">
                <label>Email</label>
                <input type="text" asp-for="Email" class="form-control" />
            </div>

            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>

            <div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </div>
            <div class="mt-2">
                <a asp-page="UserPasswordRecovery" class="btn btn-secondary">Forgot password ?</a>
            </div>
        </form>
    </div>
</div>

