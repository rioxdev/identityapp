@page "{Id?}"
@model IdentityApp.Pages.Identity.Admin.PasswordsModel
@{
    ViewBag.Workflow = "Passwords";
}

@if (TempData.ContainsKey("message"))
{
    <div class="alert alert-info m-2">@TempData["message"]</div>
}

<div class="container-fluid">
    <div class="row">
        <form method="post" asp-page-handler="SetPassword">
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label>Password</label>
                <input type="password" asp-for="Password" class="form-control" />
            </div>
            <div class="form-group">
                <label>Confirm password</label>
                <input type="password" asp-for="ConfirmPassword" class="form-control" />
            </div>
            <div>
                <button type="submit" class="btn btn-primary">Set password</button>
            </div>

        </form>
    </div>

    <div class="row mt-5">
        <form method="post" asp-page-handler="UserChange">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-light">Send password reset email</button>
        </form>
    </div>
</div>

