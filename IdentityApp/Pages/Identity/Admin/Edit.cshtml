@page "{Id?}"
@model IdentityApp.Pages.Identity.Admin.EditModel
@{
    ViewBag.Workflow = "Edit";
}

<div asp-validation-summary="All" class="text-danger m-2"></div>

<form method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label>Username</label>
        <input type="text" asp-for=IdentityUser.UserName class="form-control" />
    </div>
    <div class="form-group">
        <label>Normalized Username</label>
        <input type="text" readonly asp-for=IdentityUser.NormalizedUserName class="form-control" />
    </div>
    <div class="form-group">
        <label>Email</label>
        <input type="text" asp-for="IdentityUser.Email" class="form-control" />
    </div>
    <div class="form-group">
        <label>Normalized Email</label>
        <input type="text" asp-for="IdentityUser.NormalizedEmail" class="form-control"/>
    </div>
    <div class="form-group">
        <label>Phone</label>
        <input type="text" asp-for="IdentityUser.PhoneNumber" class="form-control" />
    </div>
    <div>
        <a asp-page="dashboard" class="btn btn-secondary">Cancel</a>
        <button type="submit" class="btn btn-primary">Save</button>
    </div>
</form>
