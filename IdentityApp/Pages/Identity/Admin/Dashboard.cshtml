@page "/identity/admin"
@model IdentityApp.Pages.Identity.Admin.DashboardModel
@{
    ViewData["workflow"] = "Dashboard";
    ViewData["showNav"] = true;
}

<div asp-validation-summary="All" class="text-danger m-2"></div>

<table class="table table-sm">
    <tbody>
        <tr>
            <th>
                Users in store
            </th>
            <td>
                @Model.UsersCount
            </td>
        </tr>
        <tr>
            <th>
                Unconfirmed accounts
            </th>
            <td>
                @Model.UsersUnconfirmed
            </td>
        </tr>
        <tr>
            <th>
                Locked out users
            </th>
            <td>
                @Model.UsersLockedout
            </td>
        </tr>
        <tr>
            <th>
                Users with two-factor enabled
            </th>
            <td>
                @Model.UsersTwoFactor
            </td>
        </tr>
    </tbody>
</table>

<form method="post">
    <button class="btn btn-secondary" type="submit">Seed database</button>
</form>